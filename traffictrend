    <script>
        // Generate sample daily data for 90 days
        function generateDailyData() {
            const data = [];
            const labels = [];
            
            // June data (30 days)
            for (let i = 1; i <= 30; i++) {
                labels.push(`Jun ${i}`);
                data.push(Math.floor(150 + Math.random() * 100 + (i > 15 ? 50 : 0)));
            }
            
            // July data (31 days)
            for (let i = 1; i <= 31; i++) {
                labels.push(`Jul ${i}`);
                data.push(Math.floor(200 + Math.random() * 150 + (i > 15 ? 100 : 0)));
            }
            
            // August data (29 days)
            for (let i = 1; i <= 29; i++) {
                labels.push(`Aug ${i}`);
                if (i === 15) {
                    data.push(1005); // Spike
                } else {
                    data.push(Math.floor(250 + Math.random() * 200));
                }
            }
            
            return { labels, data };
        }
        
        const dailyData = generateDailyData();
        
        // Daily Trend Chart
        const dailyCtx = document.getElementById('dailyTrendChart').getContext('2d');
        new Chart(dailyCtx, {
            type: 'line',
            data: {
                labels: dailyData.labels,
                datasets: [{
                    label: 'Active Users',
                    data: dailyData.data,
                    borderColor: 'rgba(6, 182, 212, 1)',
                    backgroundColor: 'rgba(6, 182, 212, 0.1)',
                    tension: 0.4,
                    fill: true,
                    pointRadius: 0,
                    pointHoverRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    },
                    x: {
                        display: false // Hide x-axis labels for cleaner look
                    }
                }
            }
        });
        
        // Monthly Comparison Chart
        const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
        new Chart(monthlyCtx, {
            type: 'bar',
            data: {
                labels: ['June', 'July', 'August'],
                datasets: [{
                    label: 'Total Users',
                    data: [5579, 8076, 9718],
                    backgroundColor: 'rgba(6, 182, 212, 0.8)',
                    borderColor: 'rgba(6, 182, 212, 1)',
                    borderWidth: 1
                }, {
                    label: 'New Users',
                    data: [5234, 7421, 8976],
                    backgroundColor: 'rgba(16, 185, 129, 0.8)',
                    borderColor: 'rgba(16, 185, 129, 1)',
                    borderWidth: 1
                }, {
                    label: 'Returning Users',
                    data: [345, 655, 742],
                    backgroundColor: 'rgba(251, 191, 36, 0.8)',
                    borderColor: 'rgba(251, 191, 36, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
